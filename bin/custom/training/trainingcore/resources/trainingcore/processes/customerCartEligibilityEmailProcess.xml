<process xmlns="http://www.hybris.de/xsd/processdefinition" start="generateCustomerCartEligibilityEmail" name="customerCartEligibilityEmailProcess"
		processClass="org.training.core.model.CustomerCartEligibilityEmailProcessModel" onError="error">

	<action id="generateCustomerCartEligibilityEmail" bean="generateCustomerCartEligibilityEmail">
		<transition name="OK" to="sendEmail"/>
		<transition name="NOK" to="error"/>
	</action>

	<action id="sendEmail" bean="sendEmail">
		<transition name="OK" to="removeSentEmail"/>
		<transition name="NOK" to="failed"/>
	</action>

	<action id="removeSentEmail" bean="removeSentEmail">
		<transition name="OK" to="success"/>
		<transition name="NOK" to="error"/>
	</action>
	
	<end id="error" state="ERROR">Something went wrong.</end>
	<end id="failed" state="FAILED">Could not send email to Gold Cart owner.</end>
	<end id="success" state="SUCCEEDED">Sent email to gold cart owner.</end>

</process>